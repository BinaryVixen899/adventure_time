{
    "compilerOptions": {
        "allowJs": true,
        "strict": true,
        "strictNullChecks": false
    },
    "fmt": {
        "options": {
            "useTabs": false,
            "lineWidth": 120,
            "indentWidth": 4,
            "singleQuote": true,
            "proseWrap": "preserve"
        }
    },
    "tasks": {
        "dev": "deno run --unstable --allow-net --watch ./test.ts",
        "lint": "deno lint --unstable  ./lib",
        "test": "deno test --allow-net --parallel"
    }
}
