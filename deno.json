{
    "compilerOptions": {
        "allowJs": true,
        "strict": true,
        "strictNullChecks": false
    },
    "fmt": {
        "options": {
            "useTabs": false,
            "lineWidth": 120,
            "indentWidth": 4,
            "singleQuote": true,
            "proseWrap": "preserve"
        }
    },
    "importMap": "./import_map.json",
    "tasks": {
        "dev": "deno run --allow-net --allow-write main.ts",
        "test": "deno test --parallel"
    }
}